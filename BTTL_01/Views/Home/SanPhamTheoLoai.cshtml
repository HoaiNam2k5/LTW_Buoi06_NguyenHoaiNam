@model BTTL_01.ViewModels.SanPhamTheoLoaiViewModel

<h2>@Model.TenLoai</h2>
<div class="row">
    <div class="col-md-3">
        <h4>Danh mục sản phẩm</h4>
        <ul class="list-group">
            @foreach (var loai in Model.DanhSachLoai)
            {
                <li class="list-group-item  p-1">
                    <a href="@Url.Action("SanPhamTheoLoai", "Home", new { maloai = loai.MaLoai })"
                       class="btn  text-center btn-outline-primary w-100 text-start @(loai.MaLoai == Model.MaLoai ? "active text-white" : "")"
                       style="text-decoration:none;">
                        @loai.TenLoai
                    </a>
                </li>
            }

        </ul>
    </div>
    <div class="col-md-9">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var sp in Model.DanhSachSanPham)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@sp.Hinh" class="card-img-top" alt="@sp.TenSP" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@sp.TenSP</h5>
                            <p class="card-text flex-grow-1">@sp.GhiChu</p>
                            <p class="card-text fw-bold text-danger">@sp.Gia.ToString("N0") đ</p>
                            <a href="@Url.Action("ChiTietSanPham", "Home", new { masp = sp.MaSP })" class="btn btn-primary mt-auto">Xem chi tiết</a>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

