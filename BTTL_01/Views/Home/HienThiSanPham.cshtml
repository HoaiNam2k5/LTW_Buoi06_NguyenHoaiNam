@model List<BTTL_01.Models.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewBag.Title</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var sp in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@sp.Hinh" class="card-img-top" alt="@sp.TenSP" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@sp.TenSP</h5>
                        <p class="card-text flex-grow-1">@sp.GhiChu</p>
                        <p class="card-text fw-bold text-danger">@sp.Gia.ToString("N0") đ</p>
                        <a href="@Url.Action("ChiTietSanPham", "Home", new { masp = sp.MaSP })" class="btn btn-primary mt-auto">Xem chi tiết</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

