@model BTTL_01.Models.SanPham

<div class="container mt-4">
    <h2>Chi tiết sản phẩm</h2>
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Hinh" alt="@Model.TenSP" class="img-fluid" style="max-height: 300px; object-fit: cover;" />
        </div>
        <div class="col-md-8">
            <h3>@Model.TenSP</h3>
            <p><strong>Mã sản phẩm:</strong> @Model.MaSP</p>
            <p><strong>Giá:</strong> @Model.Gia.ToString("N0") đ</p>
            <p><strong>Mô tả:</strong> @Model.GhiChu</p>
            <p><strong>Mã loại:</strong> @Model.MaLoai</p>
        </div>
    </div>
    <a href="@Url.Action("SanPhamTheoLoai", "Home", new { maloai = Model.MaLoai })" class="btn btn-secondary mt-3">Quay lại</a>
</div>
